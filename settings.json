// ~/Library/Application\ Support/Code/User/settings.json
{
    "better-comments.multilineComments": true,
    "better-comments.highlightPlainText": true,
    "better-comments.tags": [
        {
          "tag": "!",
          "color": "#FF2D00",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "?",
          "color": "#3498DB",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "//",
          "color": "#474747",
          "strikethrough": true,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "todo",
          "color": "#FF8C00",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
          }
    ],
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "editor.rulers": [ 100, 120 ],
    // "editor.renderIndentGuides": false,
    "editor.tabSize": 2,
    "elixirLS.dialyzerEnabled": false,
    "elixirLS.projectDir": ".",
    "emmet.includeLanguages": {
        "HTML (Eex)": "html"
    },
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    // https://marketplace.visualstudio.com/items?itemName=will-wow.vscode-open-buffers
    "explorer.openEditors.visible": 0,
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 10,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": true,
    "editor.linkedEditing": true,
    "editor.renderWhitespace": "all",
    "pgsql.format.keywordCasing": "lowercase",
    "python.linting.enabled": false,
    "sqltools.format": {
       "indentSize": 4,
       "reservedWordCase": "lower"
    },
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.env.osx": {
        "EDITOR": "code",
        "GIT_EDITOR": "code -w",
    },
    "terminal.integrated.fontFamily": "Monaco for Powerline",
    "terminal.integrated.fontSize": 10,
    // https://github.com/VSCodeVim/Vim
    "vim.leader": ",",
    "vim.vimrc.enable": false,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "t"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "b", "e"],
            "commands": ["open-buffers.openBuffer"]
        }
    ],
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Better Solarized Light",
    "workbench.editor.showTabs": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.panel.defaultLocation": "right",
    "workbench.sideBar.location": "left",
    "files.associations": {
        "*.sql": "sql"
    },
    "sqltools.connections": [
        {
            "database": "f1db",
            "driver": "PostgreSQL",
            "name": "f1db",
            "password": "postgres",
            "port": 5432,
            "server": "localhost",
            "username": "postgres"
        }
    ],
    "breadcrumbs.enabled": true,
    "files.exclude": {
        "**/cover": true
    },
    "hediet.vscode-drawio.local-storage": "",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "explorer.confirmDelete": false
}
